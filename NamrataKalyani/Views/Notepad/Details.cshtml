    <div style="padding-bottom:30px;">
    @Html.Raw(Model.Notepad)
    </div>
    <div>
        <a class="btn btn-success" data-toggle="modal" data-target="#myModal">Send Mail</a>
    </div>

    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Send Mail</h4>
                </div>
                <div class="modal-body">
                   

                    <form action="~/Notepad/SendMail" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@Model.Nid" />
                          <div class="row">
                            <div class="col-md-2">
                                <label>From</label>
                            </div>
                            <div class="col-md-10">
                                <input type="text" name="emailFromAddress" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>To</label>
                            </div>
                            <div class="col-md-10">
                                <input type="text" name="emailToAddress" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Subject</label>
                            </div>
                            <div class="col-md-10">
                                <input type="text" name="subject" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Attachment</label>
                            </div>
                            <div class="col-md-10">
                                <input type="file" id="attachments" name="attachments" multiple="multiple" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Description</label>
                            </div>
                            <div class="col-md-10">
                                @*<input type="hidden" id="Notepad" name="Notepad" value="@Html.Raw(Model.Notepad)" />*@
                                @Html.TextAreaFor(model => model.Notepad, new { @id = "codesample" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12" style="text-align:right">
                                <input type="submit" value="Send" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
                </div>
